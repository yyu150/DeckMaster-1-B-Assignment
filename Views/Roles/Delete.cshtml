@model DeckMaster.ViewModels.RoleVM
@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>
<hr />

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

<h4 class="text-danger" style="padding-top: 20px;">
    Are you sure you want to delete this role?
</h4>

<div class="card shadow-sm mb-4" style="max-width: 520px;">
    <div class="card-body" style="font-size: 1.2em;">
        <strong>Role Name:</strong> @Model.RoleName
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RoleName"/>
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}