@model IEnumerable<DeckMaster.ViewModels.RoleVM>

@{
    ViewData["Title"] = "Role Management";
}

<h1>Role Management</h1>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info" style="max-width:600px;">@ViewBag.Message</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<table class="table table-striped" style="width: 360px;">
    <thead>
    <tr>
        <th>Role Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RoleName</td>
            <td>
                <form asp-action="Delete"
                      asp-route-roleName="@item.RoleName"
                      method="post"
                      style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-sm btn-danger"
                            onclick="return confirm('Delete this role?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>