@model IEnumerable<DeckMaster.ViewModels.UserRoleVM>
@{
    ViewData["Title"] = "User Roles";
    var userName = ViewBag.UserName as string;
    var message = ViewBag.Message as string;
}

<h2>User Roles for @userName</h2>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info" style="max-width:600px;">@message</div>
}

<table class="table table-striped table-bordered" style="max-width:420px;">
    <thead>
    <tr>
        <th>Role Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.RoleName</td>
            <td>
                <form asp-action="Delete" method="get" class="d-inline">
                    <input type="hidden" name="email" value="@role.Email" />
                    <input type="hidden" name="roleName" value="@role.RoleName" />
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to User List</a>
<a asp-action="Create" asp-route-email="@userName" class="btn btn-success">Assign New Role</a>